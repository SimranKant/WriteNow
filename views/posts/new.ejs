<% layout('layouts/boilerplate') -%>

<div class="row mt-5">
  <div class="col-10 col-md-8 col-lg-6 offset-1 offset-md-2 offset-lg-3">
    <div class="register-form p-4 shadow-lg">
      <h3 class="text-center hero-gradient-text mb-4">âœ¨ Create a New Post</h3>

      <form method="post" action="/posts" novalidate class="needs-validation" enctype="multipart/form-data">
        <!-- Title -->
        <div class="form-floating mb-4">
          <input
            type="text"
            class="form-control custom-input"
            name="post[title]"
            id="title"
            placeholder="Add a catchy title"
            required
          />
          <label for="title">Title</label>
          <div class="invalid-feedback">Title is required</div>
        </div>

        <!-- Content -->
        <div class="form-floating mb-4">
          <textarea
            class="form-control custom-input"
            name="post[content]"
            id="content"
            placeholder="Write your post content here"
            style="height: 150px"
            required
          ></textarea>
          <label for="content">Content</label>
          <div class="invalid-feedback">Description is required</div>
        </div>

        <!-- Image Upload -->
        <div class="mb-4">
          <label for="image" class="form-label fw-bold text-secondary">Upload Image</label>
          <input
            type="file"
            name="post[image]"
            id="image"
            class="form-control"
            required
          />
        </div>

        <!-- Submit -->
        <div class="text-center">
          <button type="submit" class="btn-hero px-4 py-2">
            <i class="bi bi-plus-circle"></i> Add Post
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
