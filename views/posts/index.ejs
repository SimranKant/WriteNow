<% layout('layouts/boilerplate') -%>

<div class="container flex-grow-1 mt-4">

  <div class="row g-4">
    <% for (let post of posts) { %>
      <div class="col-md-6 col-lg-4">
        <a href="/posts/<%= post.id %>" class="text-decoration-none text-reset">
          <div class="post-card-new shadow-sm h-100 border-0 rounded-4 position-relative">

            <!-- Image -->
            <img class="post-card-img-new rounded-top-4" src="<%= post.image.url %>" alt="<%= post.title %>">

            <!-- Card Body (Title + Author) -->
            <div class="post-card-body-new">
              <h5 class="post-card-title-new fw-bold"><%= post.title %></h5>
              <p class="post-card-author-new mb-0">
                <i class="bi bi-person-circle"></i> @<%= post.author.username %>
              </p>
            </div>

            <!-- Card Footer -->
            <div class="post-card-footer-new">
              <small>Click to view post</small>
            </div>

          </div>
        </a>
      </div>
    <% } %>
  </div>

</div>
