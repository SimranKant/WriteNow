<% layout('layouts/boilerplate', { isLandingPage: true }) -%>

<!-- Hero Section -->
<section class="hero">
  <div class="hero-content">
    <h1>Welcome to WriteNow</h1>
    <p>Share your thoughts, read amazing posts, and connect with creative minds around the world.</p>
    <div class="hero-cta">
      <a href="/posts/new" class="btn btn-cta">Create Your First Post</a>
      <a href="#popular-posts" class="btn btn-secondary">Explore Posts</a>
    </div>
  </div>
  <div class="scroll-down"><i class="bi bi-chevron-down"></i></div>
</section>

<!-- Features Section -->
<section class="container my-5">
  <h2 class="text-center mb-4">Features</h2>
  <div class="row">
    <div class="col-md-4">
      <div class="feature fade-up">
        <i class="bi bi-pencil-square"></i>
        <h5>Create Posts</h5>
        <p>Write your ideas and share them instantly with the world.</p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="feature fade-up">
        <i class="bi bi-book"></i>
        <h5>Read Posts</h5>
        <p>Explore posts from other users and get inspired.</p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="feature fade-up">
        <i class="bi bi-people"></i>
        <h5>Connect</h5>
        <p>Engage with a community of writers and thinkers.</p>
      </div>
    </div>
  </div>
</section>

<!-- Popular Posts Section -->
<!-- Popular Posts Section -->
<section class="container my-5" id="popular-posts">
  <h2 class="text-center mb-4">Popular Posts</h2>
  <div class="row">
    <% if (popularPosts.length > 0) { %>
      <% popularPosts.forEach(post => { %>
        <div class="col-md-4">
          <div class="post-card fade-up">
            <% if(post.image?.url) { %>
              <img src="<%= post.image.url %>" alt="<%= post.title %>">
            <% } else { %>
              <img src="https://picsum.photos/400/200?random=<%= Math.floor(Math.random()*1000) %>" alt="<%= post.title %>">
            <% } %>
            <div class="post-info">
              <h5><%= post.title %></h5>
              <p>by @<%= post.author.username %></p>
              <a href="/posts/<%= post._id %>" class="btn-read">Read More</a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-center">No popular posts yet. Be the first to create one!</p>
    <% } %>
  </div>
  
  <!-- Read More All Posts Button -->
  <div class="text-center mt-4">
    <a href="/posts" class="btn-read-more">Read More Posts</a>
  </div>
</section>
