<% layout('layouts/boilerplate') -%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3 style="color: green; font-weight: 800;">Create a New Post</h3>
    <form method="post" action="/posts" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="post[title]"
          placeholder="Add a catchy title"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Title is required</div>
      </div>
      <div class="mb-3">
        <label for="content" class="form-label">Content</label>
        <textarea
          name="post[content]"
          placeholder="enter content"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Description is required</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input
          name="post[image]"
          type="file"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success add-btn mt-3">Add</button>
    </form>
  </div>
</div>
