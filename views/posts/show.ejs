<% layout('layouts/boilerplate.ejs') -%>

<div class="container flex-grow-1 mb-5">
  <!-- Post Container -->
  <div class="post-container card mb-4 shadow-sm border-0 rounded-4 p-3">
    <!-- Post Header -->
    <div class="post-header d-flex align-items-center mb-3">
      <div class="author-avatar me-3">
        <% if(post.author.profilePicture && post.author.profilePicture.url){ %>
        <a href="/users/<%= post.author._id %>"><img
          src="<%= post.author.profilePicture.url %>"
          alt="Author"
          class="rounded-circle"
          width="50"
          height="50"
        /></a>
        <% } else { %>
        <div
          class="rounded-circle bg-secondary d-flex align-items-center justify-content-center"
          style="width: 50px; height: 50px"
        >
          
        </div>
        <% } %>
      </div>
      <div class="author-info">
        <small class="text-primary fs-3"><%= post.title %></small>
        <h6 class="mb-0">@<%= post.author.username %></h6>

      </div>
    </div>

    <!-- Post Image -->
    <% if(post.image && post.image.url){ %>
    <img
      src="<%= post.image.url %>"
      class="post-image rounded mb-3 w-100 shadow-sm"
    />
    <% } %>

    <!-- Post Content -->
    <div class="post-body mb-3">
      <p class="mb-0"><%= post.content %></p>
    </div>

    <!-- Post Actions -->
    <div
      class="post-actions d-flex justify-content-between align-items-center mb-3"
    >
      <div style="position: relative; display: inline-block">
        <form class="like-form d-inline" data-post-id="<%= post._id %>">
          <% if(currUser){ %>
          <button
            type="button"
            class="btn btn-sm rounded-pill like-btn <%= post.likedBy.includes(currUser?._id) ? 'btn-primary' : 'btn-outline-primary' %>"
          >
            <i class="fa-solid fa-thumbs-up"></i>
            Like (<span class="like-count"><%= post.likes %></span>)
          </button>
          <% } else { %>
          <button
            type="button"
            class="btn btn-sm rounded-pill btn-outline-secondary"
            disabled
            title="Login to like"
          >
            <i class="fa-solid fa-thumbs-up"></i>
            Like (<span class="like-count"><%= post.likes %></span>)
          </button>
          <% } %>
        </form>
      </div>

      <% if(currUser && post.author._id.equals(currUser._id)){ %>
      <div>
        <a
          href="/posts/<%= post._id %>/edit"
          class="btn btn-success btn-sm me-1 rounded-pill"
          >Edit</a
        >
        <form
          method="post"
          action="/posts/<%= post._id %>?_method=delete"
          class="d-inline"
        >
          <button class="btn btn-danger btn-sm rounded-pill">Delete</button>
        </form>
      </div>
      <% } %>
    </div>

    <!-- Add Comment Form -->
    <% if(currUser){ %>
    <div class="comment-form mb-3">
      <form
        method="post"
        action="/posts/<%= post._id %>/comments"
        class="d-flex gap-2"
      >
        <input
          type="text"
          name="comment"
          placeholder="Add a comment..."
          class="form-control rounded-pill"
          required
        />
        <button class="btn btn-primary btn-sm rounded-circle">
          <i class="fa-solid fa-share"></i>
        </button>
      </form>
    </div>
    <% } %>

    <!-- Comments Section -->
    <div class="comments-section">
      <% for(let comment of post.comments){ %>
      <div class="comment d-flex align-items-start mb-2">
        <div class="comment-avatar me-2">
          <% if(comment.owner.profilePicture &&
          comment.owner.profilePicture.url){ %>
          <a href="/users/<%= comment.owner._id %>">
            <img
              src="<%= comment.owner.profilePicture.url %>"
              alt="Commenter"
              class="rounded-circle"
              width="40"
              height="40"
            />
          </a>
          <% } else { %>
          <div
            class="rounded-circle bg-secondary d-flex align-items-center justify-content-center"
            style="width: 40px; height: 40px"
          >
            @
          </div>
          <% } %>
        </div>
        <div class="comment-body flex-grow-1 p-2 rounded-3 bg-light">
          <strong><%= comment.owner.username %></strong>
          <span><%= comment.comment %></span>
        </div>
        <% if(currUser && comment.owner && comment.owner._id.toString() ===
        currUser._id.toString()){ %>
        <form
          method="post"
          action="/posts/<%= post._id %>/comments/<%= comment._id %>?_method=DELETE"
          class="ms-2"
        >
          <button class="btn btn-sm btn-outline-danger rounded-pill">
            Delete
          </button>
        </form>
        <% } %>
      </div>
      <% } %>
    </div>
  </div>
</div>
