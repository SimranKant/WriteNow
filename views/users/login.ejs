<% layout('layouts/boilerplate') -%>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-4 hero-gradient-text">Login to WriteNow</h1>

      <form 
        action="/users/login" 
        method="post" 
        class="login-form shadow p-4 rounded" 
        novalidate
      >
        <!-- Floating label input -->
        <div class="form-floating mb-3">
          <input
            type="text"
            name="username"
            class="form-control custom-input"
            id="username"
            placeholder="Username"
            required
          />
          <label for="username">Username</label>
        </div>

        <div class="form-floating mb-3">
          <input
            type="password"
            name="password"
            class="form-control custom-input"
            id="password"
            placeholder="Password"
            required
          />
          <label for="password">Password</label>
        </div>

        <div class="d-grid mt-4">
          <button type="submit" class="btn btn-hero btn-lg">Login</button>
        </div>

        <p class="text-center mt-3">
          Donâ€™t have an account?
          <a href="/users/register" class="btn btn-login btn-sm fw-bold">Sign Up</a>
        </p>
      </form>
    </div>
  </div>
</div>
