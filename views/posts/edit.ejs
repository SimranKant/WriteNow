<% layout('layouts/boilerplate') -%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <b><h3 style="color: green; font-weight: 800;">Edit Post</h3></b>
    <form method="post" action="/posts/<%= post._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="post[title]"
          placeholder="Add a catchy title"
          type="text"
          class="form-control"
          value="<%= post.title %>"
          required
        />
        <div class="invalid-feedback">Title is required</div>
      </div>
      <div class="mb-3">
        <label for="content" class="form-label">Content</label>
        <textarea
          name="post[content]"
          class="form-control"
          rows="10"
          required
        ><%= post.content %></textarea>
        <div class="invalid-feedback">Description is required</div>
      </div>
      <div class="mb-3">
        <label class="form-label">Old Image</label><br>
        <img src="<%= originalImageUrl %>">
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Upload new Image</label>
        <input
          name="post[image]"
          placeholder="enter image URL/Link"
          type="file"
          class="form-control"
        />
      </div>
      <button class="btn btn-success edit-btn mt-3">Edit</button>
      <br /><br />
    </form>
  </div>
</div>
