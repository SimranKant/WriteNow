<% if (success && success.length) { %>
  <div class="alert alert-success alert-dismissible fade show custom-alert col-6 offset-3 text-center" role="alert">
    <i class="bi bi-check-circle-fill me-2"></i>
    <span class="alert-message"><%= success %></span>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if (error && error.length) { %>
  <div class="alert alert-danger alert-dismissible fade show custom-alert col-6 offset-3 text-center" role="alert">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    <span class="alert-message"><%= error %></span>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
